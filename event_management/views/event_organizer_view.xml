<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  heres tree view for organizer model -->
    <record id="view_event_organizer_tree" model="ir.ui.view">
        <field name="name">event.organizer.tree</field>
        <field name="model">event.organizer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
<!--  heres form view for organizer model -->
    <record id="view_event_organizer_form" model="ir.ui.view">
        <field name="name">event.organizer.form</field>
        <field name="model">event.organizer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="event_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
