<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--  heres tree view for attendee model -->
    <record id="view_event_attendee_tree" model="ir.ui.view">
        <field name="name">event.attendee.tree</field>
        <field name="model">event.attendee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
<!--  heres form view for attendee model -->
    <record id="view_event_attendee_form" model="ir.ui.view">
        <field name="name">event.attendee.form</field>
        <field name="model">event.attendee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="event_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
